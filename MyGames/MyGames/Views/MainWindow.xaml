<Window x:Class="MyGames.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGames" 
        xmlns:viewmodel="clr-namespace:MyGames.ViewModel"
        mc:Ignorable="d"
        Title="MyGames" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml"/>
    </Window.Resources>    
    <Grid x:Name="MainGrid">        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="3">            
                <Menu>
                    <MenuItem Header="_File">
                        <MenuItem Header="_Exit" 
                    Command="{Binding Path=CloseCommand}" />
                    </MenuItem>
                    <MenuItem Header="_Edit" />
                    <MenuItem Header="_Options" />
                    <MenuItem Header="_Help" />
                </Menu>            
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Label Content="Search" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,0,0"/>
            <StackPanel Orientation="Horizontal">                
                <TextBox x:Name="Search" Height="30" Width="200" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,30,0,0"/>
                <Button Content="Load data"  Width="100" Height="20" Margin="25,30,0,0"/>
            </StackPanel>
            
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <GroupBox>
                <ListView x:Name="lvGamesList" ItemsSource="{Binding GamesList}" SelectedItem="{Binding SelectedGame}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Title}" Width="200">
                                <GridViewColumnHeader Tag="Title">Title</GridViewColumnHeader>
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=PlatformShort}" Width="100">
                                <GridViewColumnHeader Tag="Platform">Platform</GridViewColumnHeader>
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Genre.GenreName}" Width="150">
                                <GridViewColumnHeader Tag="Genre">Genre</GridViewColumnHeader>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2">
            <Grid x:Name="GameDetailsGrid" Margin="5,5" Visibility="{Binding IsGameDetailsShown, Converter={StaticResource BoolToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.ColumnSpan="4">                    
                    <Label Content="{Binding SelectedGame.Title, FallbackValue='Here is the game title'}" FontSize="20" FontWeight="DemiBold"/>                    
                </Grid>
                <Grid Grid.Row="1" Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <!--TODO Fix style for fonts-->
                        <Label Content="Platform" FontWeight="ExtraBold"/>
                        <Label Content="{Binding SelectedGame.Platform, FallbackValue='Playstation 3'}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Genre" FontWeight="ExtraBold"/>
                        <Label Content="{Binding SelectedGame.Genre, FallbackValue='Adventure'}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Grade" FontWeight="ExtraBold"/>
                        <Label Content="{Binding SelectedGame.Grade, FallbackValue='5/10'}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Release" FontWeight="ExtraBold"/>
                        <Label Content="{Binding SelectedGame.ReleaseDate, FallbackValue='1994-01-01'}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="2">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Condition" FontWeight="ExtraBold"/>
                        <Label Content="{Binding SelectedGame.Condition, FallbackValue='9/10'}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Grade" FontWeight="ExtraBold"/>
                        <Label Content="{Binding SelectedGame.Box, FallbackValue='Yes'}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Release" FontWeight="ExtraBold"/>
                        <Label Content="{Binding SelectedGame.Manual, FallbackValue='No'}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="2">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Region" FontWeight="ExtraBold"/>
                        <Label Content="{Binding SelectedGame.Region, FallbackValue='N/A'}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
                    <StackPanel Orientation="Vertical">
                        <Label Content="{Binding SelectedGame.Comment, FallbackValue='Here is comment section which is filled with fun stuff'}"/>
                    </StackPanel>
                </Grid>
            </Grid>            
        </Grid>
        <Grid Grid.Row="3" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Button Content="Add" Width="50" Height="20" Margin="5" Command="{Binding AddGame}"/>
                <Button Content="Edit" Width="50" Height="20" Margin="5"/>
                <Button Content="Delete"  Width="50" Height="20" Margin="5"/>                
            </StackPanel>
        </Grid>
    </Grid>
</Window>

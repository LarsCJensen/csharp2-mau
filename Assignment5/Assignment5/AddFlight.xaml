<Window x:Class="Assignment5.AddFlight"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="{Binding flightNo}"
      SizeToContent="WidthAndHeight">

    <Grid Margin="5,5,5,5">
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="247" Margin="31,17,0,0" VerticalAlignment="Top" Width="351"/>
        <Button x:Name="btnStart" Click="btnStart_Click" Content="Start" HorizontalAlignment="Left" Height="30" Margin="20,300,0,0" VerticalAlignment="Top" Width="100" IsEnabled="True"/>
        <ComboBox x:Name="cboChange" HorizontalAlignment="Left" Height="31" Margin="131,300,0,0" VerticalAlignment="Top" Width="134" IsEnabled="False"/>
        <Button x:Name="btnLand" Content="Land" HorizontalAlignment="Left" Height="30" Margin="284,300,0,0" VerticalAlignment="Top" Width="100" IsEnabled="False"/>

    </Grid>
</Window>
